{
  "include": [
    "lib/*",
    "test/*"
  ],
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "incremental": true,
    "declaration": true
  }
}